<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phrases"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.learngreek.PhrasesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="113dp"
            android:src="@drawable/sun"
            android:layout_weight="2" />
        <ImageView
            android:layout_width="132dp"
            android:layout_height="113dp"
            android:src="@drawable/night"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kaliméra - καλημέρα"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35sp"
            android:layout_weight="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kalinýchta - καληνύχτα"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35sp"
            android:layout_weight="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="113dp"
            android:src="@drawable/thank_you"
            android:layout_weight="2" />
        <ImageView
            android:layout_width="132dp"
            android:layout_height="113dp"
            android:src="@drawable/you_are_welcome"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="efcharistó - ευχαριστώ"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35sp"
            android:layout_weight="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="parakaló - παρακαλώ"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35sp"
            android:layout_weight="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="113dp"
            android:src="@drawable/welcome"
            android:layout_weight="2" />
        <ImageView
            android:layout_width="132dp"
            android:layout_height="113dp"
            android:src="@drawable/how_are_you"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kalós írthes - καλώς ήρθες"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35sp"
            android:layout_weight="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ti káneis? - τι κάνεις;"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35sp"
            android:layout_weight="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>
</LinearLayout>
